<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- ... Other views ... -->



        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/page_android_large___1_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View
                    android:id="@+id/_bg__android_large___1_ek2"
                    android:background="@drawable/_bg__android_large___1_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="411dp"
                    android:layout_height="891dp" />

                <ImageView
                    android:id="@+id/rectangle_3"
                    android:layout_width="420dp"
                    android:layout_height="195.42dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="-65dp"
                    android:contentDescription="rectangle_3"
                    android:src="@drawable/rectangle_3" />

                <ImageView
                    android:id="@+id/signtutor_modified_1"
                    android:src="@drawable/signtutor_modified_1"
                    android:contentDescription="signtutor_modified_1"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="120dp"
                    android:layout_width="185.36dp"
                    android:layout_height="182.51dp"
                    android:layout_alignTop="@id/rectangle_3"
                    android:layout_alignLeft="@id/rectangle_3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="155dp"
                    android:fontFamily="@font/baloo_thambi"
                    android:text="Login"
                    android:textColor="@color/orange"
                    android:textSize="50sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="190dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/bree_serif" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp" />

                    <EditText
                        android:id="@+id/pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="35dp"
                        android:ems="10"
                        android:hint="@string/password"
                        android:inputType="textPassword" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="60dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/brown"
                        app:cardUseCompatPadding="true"> <!-- UseCompatPadding may help -->


                        <Button
                            android:id="@+id/loginbtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/brown"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/regiterbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/new_user_register_here"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/or"
                        android:layout_marginTop="30dp"
                        android:textSize="17sp"/>

                    <ImageView
                        android:id="@+id/googlebtn"
                        android:layout_marginTop="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/google_icon_logo_svgrepo_com"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
